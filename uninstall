#!/bin/bash

## Author : Aditya Shakya
## Email  : adi1090x@gmail.com

#colors
R='\033[1;31m'
B='\033[1;34m'
C='\033[0;36m'
G='\033[1;32m'
W='\033[1;37m'
Y='\033[1;33m'

DIR="$(pwd)"

echo
echo -e $B"   ┌───────────────────────────────────────────┐"
echo -e $B"   │ $R  ╺┳╸┏━╸┏━┓┏┳┓╻╺┳╸┏━╸  $G ┏━┓╺┳╸╻ ╻╻  ┏━╸  $B │"
echo -e $B"   │ $R   ┃ ┣╸ ┣┳┛┃┃┃┃ ┃ ┣╸   $G ┗━┓ ┃ ┗┳┛┃  ┣╸   $B │"
echo -e $B"   │ $R   ╹ ┗━╸╹┗╸╹ ╹╹ ╹ ┗━╸  $G ┗━┛ ╹  ╹ ┗━╸┗━╸  $B │"
echo -e $B"   └───────────────────────────────────────────┘"
echo -e $B"   [$R*$B] By-$Y Aditya Shakya $R//$Y adi1090x"
echo

echo -e $G"   [*] Uninstalling termite-style..."
echo
sudo rm -r /usr/share/termite-style/
sudo rm -r /usr/share/fonts/tsf/
sudo rm /usr/bin/termite-style

echo -e $G"   [*] Uninstall Completed."
echo
echo -e $G"   [*] Developed By$R Aditya Shakya."
echo
